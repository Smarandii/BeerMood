
@{
    ViewData["Title"] = "Test";
}

<SCRIPT language="JavaScript"
        type="text/javascript">
<!--
    //
    // Documentation:
    //   http://chami.com/tips/javascript/
    //
    function checkAnswer(quizForm,
        theAnswer,
        urlRight,
        urlWrong) {
        var s = "?";

        // go through the "current choices"
        // to find the selected choice.
        // radio boxes pointing to choices
        // must be named "cc"
        // change if necessary
        //

        for (var i = 0; i < quizForm.elements.length; i++) {
            if (("cc" ==
                quizForm.elements[i].name) &&
                (quizForm.elements[i].checked)) {
                s = quizForm.elements[i].value;
            }
        }

        // no choice was selected
        //
        if ("?" == s) {
            alert("Please make a selection.");
            return false;
        }

        // check if we have the correct
        // choice selected
        //
        if (s == theAnswer) {
            alert("'" + s + "' is correct!");
            if (urlRight) {
                document.location.href = urlRight;
            }
        }
        else {
            alert("'" + s + "' is incorrect.");
            if (urlWrong) {
                document.location.href = urlWrong;
            }
        }

        // return "false" to indicate not to
        // submit the form.
        // change this to "true" if the form
        // "action" is valid,
        // i.e. points to a valid CGI script
        //
        return false;
    }

    function answerHandler(quizForm) {
        return checkAnswer(quizForm, "B");
    }
    //-->
</SCRIPT>

<h1>Нам пизда?</h1>
<FORM method="POST"
      onSubmit="return answerHandler(this);">

    <INPUT TYPE="RADIO" VALUE="A" NAME="cc">
    A. Нет<BR>

    <INPUT TYPE="RADIO" VALUE="B" NAME="cc">
    B. Нам пизда<BR>

    <INPUT TYPE="RADIO" VALUE="C" NAME="cc">
    C. Сроки удлинят, вот увидите 🤡<BR>

    <INPUT TYPE="SUBMIT" VALUE="Submit Answer">

</FORM>

